<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fin_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la finca: Nombre finca"
                    android:textSize="15sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/emp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empleado asignado: Nombre empleado"
                    android:textSize="15sp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/emp_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valor por jornal: 30000 COP"
                    android:textSize="15sp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="15dp"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"/>

                <LinearLayout
                    android:id="@+id/layout_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:id="@+id/test_lo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/fact_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="Total: 0 COP"
                    android:textSize="17sp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/white"/>

                <Button
                    android:id="@+id/add_act_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@android:color/background_light"
                    android:text="Asignar actividad"/>

                <Button
                    android:id="@+id/fact_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorAccent"
                    android:textColor="@android:color/background_light"
                    android:text="Facturar actividades finalizadas"/>

            </LinearLayout>


        </ScrollView>


</LinearLayout>

